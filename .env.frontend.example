# ==============================================================================
# Plane Frontend Environment Configuration for Dokploy
# ==============================================================================
# Copy this file and set in Dokploy's environment variables for the Frontend app
# Domain: plane.mohdop.com
# Includes: Web (main app), Admin (god-mode), and Space (public views)
# ==============================================================================

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
# Backend API base URL
NEXT_PUBLIC_API_BASE_URL=https://plane-api.mohdop.com
VITE_API_BASE_URL=https://plane-api.mohdop.com

# ==============================================================================
# WEB APP CONFIGURATION (Main Application)
# ==============================================================================
# Main web application URL
NEXT_PUBLIC_WEB_BASE_URL=https://plane.mohdop.com
VITE_WEB_BASE_URL=https://plane.mohdop.com

# ==============================================================================
# ADMIN APP CONFIGURATION (God Mode)
# ==============================================================================
# Admin panel base URL
NEXT_PUBLIC_ADMIN_BASE_URL=https://plane.mohdop.com
VITE_ADMIN_BASE_URL=https://plane.mohdop.com

# Admin panel path (served at plane.mohdop.com/god-mode)
NEXT_PUBLIC_ADMIN_BASE_PATH=/god-mode
VITE_ADMIN_BASE_PATH=/god-mode

# ==============================================================================
# SPACE APP CONFIGURATION (Public Views)
# ==============================================================================
# Space (public project views) base URL
NEXT_PUBLIC_SPACE_BASE_URL=https://plane.mohdop.com
VITE_SPACE_BASE_URL=https://plane.mohdop.com

# Space path (served at plane.mohdop.com/spaces)
NEXT_PUBLIC_SPACE_BASE_PATH=/spaces
VITE_SPACE_BASE_PATH=/spaces

# ==============================================================================
# LIVE SERVER CONFIGURATION (Real-time Collaboration)
# ==============================================================================
# Live collaboration server URL (same domain, served at /live path)
NEXT_PUBLIC_LIVE_BASE_URL=https://plane.mohdop.com
VITE_LIVE_BASE_URL=https://plane.mohdop.com

# Live server path
NEXT_PUBLIC_LIVE_BASE_PATH=/live
VITE_LIVE_BASE_PATH=/live

# ==============================================================================
# DEPLOYMENT CONFIGURATION
# ==============================================================================
# Build time environment
NODE_ENV=production

# Port (for nginx)
PORT=3000

# ==============================================================================
# FEATURE FLAGS (Optional)
# ==============================================================================
# Enable/disable features in the frontend
NEXT_PUBLIC_ENABLE_SENTRY=0
VITE_ENABLE_SENTRY=0

NEXT_PUBLIC_ENABLE_SESSION_RECORDER=0
VITE_ENABLE_SESSION_RECORDER=0

# ==============================================================================
# ANALYTICS (Optional)
# ==============================================================================
# Google Analytics ID
NEXT_PUBLIC_GA_TRACKING_ID=
VITE_GA_TRACKING_ID=

# PostHog analytics
NEXT_PUBLIC_POSTHOG_KEY=
VITE_POSTHOG_KEY=

NEXT_PUBLIC_POSTHOG_HOST=
VITE_POSTHOG_HOST=

# ==============================================================================
# MONITORING (Optional)
# ==============================================================================
# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=
VITE_SENTRY_DSN=

NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
VITE_SENTRY_ENVIRONMENT=production

# ==============================================================================
# DEPLOYMENT PLATFORM
# ==============================================================================
# Track deployment source
NEXT_PUBLIC_DEPLOY_WITH=DOKPLOY
VITE_DEPLOY_WITH=DOKPLOY
